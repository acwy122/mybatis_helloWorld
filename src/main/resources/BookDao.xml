<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mashibing.Dao.BookDao">


    <select id="selectBookById" resultType="com.mashibing.bean.Book">
        select * from book where id = #{id}
    </select>

    <insert id="save">
        insert into book (id,book_name,price) values(#{id},#{bookName},#{price});
    </insert>

    <update id="update">
        update book set book_name=#{bookName} where id = #{id};
    </update>

    <delete id="delete">
        delete from  book where id = #{id}
    </delete>
</mapper>